@model MyPrivateExnessCalculator.Models.Trade

@{
    ViewBag.Title = "WinUpdate";
}

<h2>Gain Update</h2>

<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pair)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pair)
        </dd>

        

    </dl>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TradeId)


        @Html.HiddenFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.Pair, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.Entry, new { htmlAttributes = new { @class = "form-control" } })


        @Html.HiddenFor(model => model.StopLoss, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.StopLossPoints, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.TP, new { htmlAttributes = new { @class = "form-control" } })


        @Html.HiddenFor(model => model.PipValue, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.OnePipette, new { htmlAttributes = new { @class = "form-control" } })


        @Html.HiddenFor(model => model.Margin, new { htmlAttributes = new { @class = "form-control" } })


        @Html.HiddenFor(model => model.MinLot, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            @Html.LabelFor(model => model.Gain, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gain, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gain, "", new { @class = "text-danger" })
            </div>
        </div>


        @Html.HiddenFor(model => model.StopLossValue, new { htmlAttributes = new { @class = "form-control" } })


        @Html.HiddenFor(model => model.Results, new { htmlAttributes = new { @class = "form-control" } })


        @Html.HiddenFor(model => model.HitStop)

        @Html.HiddenFor(model => model.FinalLot, new { htmlAttributes = new { @class = "form-control" } })

        @Html.HiddenFor(model => model.Loss, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Results", "Result")
</div>
